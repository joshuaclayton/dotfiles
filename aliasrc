# ruby/rails
alias bes="bundle exec rspec"
alias ber="bundle exec rake"
alias bake="bundle exec rake"
alias be="bundle exec"

# git
alias g="git"
alias gbr="git remote prune origin && git branch -r"

# filesystem
alias ..="cd ../"
alias ...="cd ../.."
alias ....="cd ../../.."
alias o=$EDITOR
alias vim=nvim
alias dotf="cd $HOME/.dotfiles"
alias ls="ls -G"
alias mkdir="mkdir -p"
alias nvimconfig="cd ~/.config/nvim"

# services
alias nick="mplayer ~/Music/Theme\ Music/528491.wav > /dev/null 2>&1"

# misc.
alias timestamp="date +%Y%m%d%H%M%S"

# default unused to use rg instead of ag
alias unused="unused --search rg"

alias random_port="lsof -iTCP -sTCP:LISTEN -P | random_port"
